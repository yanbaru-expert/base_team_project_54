<h1>ユーザー 一覧</h1>
<%= link_to "投稿画面へ", "/users/new" %>
<% @users.each do |user| %>
  <p>
    <%= user.name %>
    <%= link_to "詳細", "/users/#{user.id}", method: :get %>
    <%= link_to "編集", "/users/#{user.id}/edit", method: :get %>
    <%= link_to "削除", "/users/#{user.id}", method: :delete, data: {confirm: "削除しますか？"} %>
  </p>
<% end %>
